<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#605454"
    tools:context="com.example.rahee.bank.Equity">

    <TextView
        android:id="@+id/karibuequity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="75dp"
        android:text="Karibu Equity"
        android:visibility="visible" />

    <TextView
        android:id="@+id/equityloan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="Loans"
        android:visibility="visible"
        android:layout_below="@+id/karibuequity"
        android:layout_alignLeft="@+id/karibuequity"
        android:layout_alignStart="@+id/karibuequity"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/clicke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/equityloan"
        android:layout_alignRight="@+id/equityloan"
        android:layout_below="@+id/equityloan"
        android:layout_marginTop="26dp"
        android:text="Loans to take" />
</RelativeLayout>
